<h1>Vehicles</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Make</th>
      <th>Model</th>
      <th>Events</th>
      <th>Future Events</th>
      <th>Past Events</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |v| %>
      <tr>
        <td><%= link_to v.nickname, vehicle_path(v) %></td>
        <td><%= v.make %></td>
        <td><%= v.model %></td>
        <td><%= v.events.count %></td>
        <td><%= v.vendors.count %></td>
        <td><%= v.categories.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Create New Vehicle', new_vehicle_path, class: 'btn btn-info btn-xs' %>
